{
  "name": "appcardapio-backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p .",
    "start": "node dist/index.js",
    "build:all": "npm --prefix ../frontend run build && npm run build",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "hash:passwords": "ts-node ./src/scripts/hashPasswords.ts",
    "create:superadmin": "ts-node ./src/scripts/createSuperAdmin.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.11.0",
    "@types/axios": "^0.9.36",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "path": "^0.12.7",
    "express-rate-limit": "^6.7.0",
    "zod": "^4.20.0"
  },
  "prisma": {
    "seed": "ts-node ./src/seed.ts"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.19.27",
    "prisma": "^5.11.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "~5.8.2"
  }
}
